<%= render_breadcrumbs %>

<%= form_for [@word, @definition] do |f| %>
	<%= f.label :origin %>
	<%= f.text_field :origin %>
	<br> 
	<%= f.label :text %>
	<%= f.text_field :text %>
	<br>
	<%= f.label :video %>
	<%= f.text_field :video %>
	
	<br>
	<%= definition_builder.label :category %>
	<%= definition_builder.select :category, %w[Insultos Memes Sexual Cotidiano], {multiple: true}%>
	<br>
	<%= f.label :example %>
	<%= f.text_field :example %>
	<br>

	<%= f.submit 'Guardar' %>
<% end %>